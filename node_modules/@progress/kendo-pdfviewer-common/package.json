{
  "name": "@progress/kendo-pdfviewer-common",
  "description": "Kendo UI TypeScript package exporting functions for PDFViewer component",
  "version": "0.5.0",
  "keywords": [
    "Kendo UI"
  ],
  "author": "Progress",
  "license": "SEE LICENSE IN LICENSE.md",
  "main": "dist/npm/main.js",
  "module": "dist/es/main.js",
  "es2015": "dist/es2015/main.js",
  "typings": "dist/npm/main.d.ts",
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "npx husky",
    "test": "jest --config jest.config.js",
    "test:ci": "jest --config jest.config.js",
    "watch-test": "jest --watch --config jest.config.js",
    "start": "cross-env NODE_OPTIONS=--openssl-legacy-provider gulp start",
    "lint": "npx eslint",
    "lint:fix": "npx eslint --fix",
    "api-check": "gulp api-check",
    "build-package": "cross-env NODE_OPTIONS=--openssl-legacy-provider gulp build-ts-package"
  },
  "peerDependencies": {
    "@progress/kendo-draggable": "^3.1.0",
    "@progress/kendo-file-saver": "^1.1.1"
  },
  "dependencies": {
    "@progress/kendo-common": "1.0.2",
    "pdfjs-dist": "4.6.82",
    "tslib": "^2.4.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9.18.0",
    "@progress/kendo-common-tasks": "8.0.7-dev.24",
    "@progress/kendo-draggable": "^3.1.0",
    "@progress/kendo-file-saver": "^1.1.1",
    "@progress/kendo-typescript-tasks": "11.3.8-dev.22",
    "@types/jasmine": "~2.2.0",
    "@types/jest": "^23.3.14",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.18.0",
    "eslint-plugin-jsdoc": "^50.6.2",
    "gulp": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-typescript": "^1.2.0",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.21.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-pdfviewer-common.git"
  },
  "bugs": {
    "url": "https://github.com/telerik/kendo-angular"
  },
  "release": {
    "debug": false,
    "branchTags": {
      "develop": "dev"
    },
    "fallbackTags": {
      "dev": "latest"
    },
    "branches": [
      {
        "name": "master",
        "channel": "latest"
      },
      {
        "name": "develop",
        "prerelease": true,
        "channel": "dev"
      }
    ]
  },
  "files": [
    "dist"
  ]
}
